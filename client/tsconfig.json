{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2017", "dom"],  // Include 'es2017' or a later version
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
